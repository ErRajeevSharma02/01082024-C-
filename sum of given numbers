#include <iostream>
using namespace std;
int main() {

int x;
int i;
cout<<"Enter the size of series: ";
cin>>x;
cout<<endl;

cout<<"Enter the number of series: ";
for(int i=1;i<=x;i++)
{
    cin>>i;

}
cout<<endl;
cout<<"Your entered series is : ";

for(i=1;i<=x;i++)
{
    cout<<i<<" ";

}

cout<<endl;
int sum=0;
for(i=1;i<=x;i++)
{
    sum = sum + i;

}
cout<<"The sum of series is : "<<sum<<endl;




  return 0;
}
