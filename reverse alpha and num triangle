#include <iostream>
using namespace std;
int main() {
   
  int rows,col;
   cout<<"Enter the number of rows: ";
   cin>>rows;
   cout<<"Enter the number of columns : ";
   cin>>col;
   cout<<endl;
   
   for(int i=1;i<=rows;i++)
   {
       for(int j=1;j<=rows-i+1;j++)
       {
           cout<<"* ";
          
       }
       cout<<endl;
   }
   
   cout<<endl;
   
   for(int k=1;k<=rows;k++)
   {
       for(int l=1;l<=rows-k+1;l++)
       {
           cout<<l<<" ";
          
       }
       cout<<endl;
   }
   
   
   for(int m=1;m<=rows;m++)
   {
       for(int n=1;n<=rows-m+1;n++)
       {
           cout<<2*n-1<<" ";
          
       }
       cout<<endl;
   }
   
   for(int o=1;o<=rows;o++)
   {
       int a=1;
       for(int p=1;p<=o;p++)
       {
           cout<<a<<" ";
          a++;
       }
       cout<<endl;
   }
   
   
  





    return 0;
}
